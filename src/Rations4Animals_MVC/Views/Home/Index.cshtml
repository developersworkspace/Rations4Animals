@{
    ViewBag.Title = "Index";
}

<script src="~/JavaScripts/Main.js"></script>


<script>
    getLists();
</script>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <title>World Of Rations</title>
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
</head>
<body>
    <img src="Images/banner.jpg" alt="banner" width="100%" height="150px" style="z-index:-1">
    <h1 style="position:absolute; top:25px; left:200px;color:#FFFFFF;background:#00CC00;padding:15px;border-radius:10px 10px 10px 10px;font-family:AR DELANEY;">World Of Rations <small style="color:#FFFFFF; font-size:15px">@System.Configuration.ConfigurationManager.AppSettings["webpages:Version"]</small></h1>
    <div style="position:absolute; top:100px; left:450px;color:#FFFFFF;background:#00CC00;padding:5px;border-radius:10px 10px 10px 10px;">
        <a href="#" onclick="tabClick(0)" id="homepage_link" style="font-weight: 900;color:#FFFFFF;background-color:transparent;padding-left:15px;padding-right:15px;border-radius:10px 10px 10px 10px;">HomePage</a>
        |
        <a href="#" onclick="tabClick(1)" id="rationcalculatorpage_link" style="font-weight: 900;color:#FFFFFF;background-color:#66FF33;padding-left:15px;padding-right:15px;border-radius:10px 10px 10px 10px;">Ration Formulator</a>
        |
        <a href="#" style="font-weight: 900;color:#FFFFFF">About Us</a>
        |
        <a href="#" style="font-weight: 900;color:#FFFFFF">Contact Us</a>
    </div>

    <div id="homepage" style="width: 100%;padding-left: 25%;display:none">

        <div class="css/container">
            <div class="row form-group">
                <div class="col-sm-6">
                    <p>
                        This simple tool enables farmers to calculate the least cost ration.
                        The user can include a range of feeds from a list of over 65 different feeds.  Other feeds can also be entered which are not on the list. They can then enter the cost (R per tonne) of the feeds they want to use.
                        The ration calculator then calculates the composition and cost of the ration using the feeds chosen and the proportion of the feeds in the mix.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div style="width: 100%;padding-left: 25%;display:block" id="rationcalculatorpage">
       @Html.Partial("Calculator");

    </div>


</body>
</html>

